<form class="incident-form">
    <h1>Rankings de Incidentes</h1>

    {{#each lista_rankings}}
        <h4 id="h4ranking">Ranking: {{tipo_ranking}}</h4>
        <table class="table centered-table">
            <thead class="bg-danger" style="color: white;">
            <tr>
                <th>Puesto</th>
                <th>Nombre del Ganador</th>
            </tr>
            </thead>
            <tbody>
            {{#each ranking}}
                <tr>
                    <td>{{id_ranking}}</td>
                    <td>{{entidad.nombre}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/each}}
</form>
