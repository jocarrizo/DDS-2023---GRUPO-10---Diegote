<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Incidentes</title>
    <script src="/resources/JS/filtro_listener.js"></script>
    <link rel="stylesheet" href="/resources/CSS/styles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<form class="incident-form" id="incidentesForm">
    <yus-html src="/navbar.html"></yus-html>
    <h1>Listado de Incidentes</h1>
    <!-- Listado de servicios -->
    <div>
        <h3 class="mt-3 mb-2">Comunidades disponibles:</h3>
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Seleccionar</th>
                <th scope="col">Comunidad</th>
            </tr>
            </thead>
            <tbody>
            {{#each comunidades}}
            <tr>
                <td>
                    <div class="form-check">
                        <input class="form-check-input comunidad-selection" type="radio" name="comunidad" data-comunidad="{{ comunidad.id_comunidad }}" />
                    </div>
                </td>
                <td>{{ comunidad.id_comunidad }}</td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

{{#if comunidadSeleccionada}}

    <b> Filtrar por: </b>
    <select id="Filtro">
        <option>Sin Filtro</option>
        <option>Abiertos</option>
        <option>Cerrados</option>  
    </select>
    <table class ="table">
        <thead class = "bg-danger" style="color: white;" >
            <tr>
                <th scope="col" >ID</th>
                <th scope="col">Observaciones</th>
                <th scope="col">Fecha de Apertura</th>
                <th scope="col">Fecha de Cierre</th>
                <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
        {{#each incidentes}}
            <!-- Cada fila representa un incidente -->
            <tr>
                <td>{{id_incidente}}</td>
                <td>{{observaciones}}</td>
                <td>{{apertura}}</td>
                <td>{{cierre}}</td>
                <td>{{estado}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/if}}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/resources/JS/script.js"></script>

</form>
</body>
</html>

